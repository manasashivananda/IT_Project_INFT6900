<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create E-Invoice</title>
    <link rel="stylesheet" href="/Css/styles.css">
    <link rel="stylesheet" href="/Css/invoice.css">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
</head>

<body>

    <!-- Back to Dashboard Button -->
    <button type="button" class="back-btn" onclick="location.href='/dashboard'">
        <i class="fas fa-arrow-left"></i>Dashboard
    </button>

    <h1><i class="fas fa-file-invoice"></i> Create E-Invoice</h1>

    <form id="invoiceForm" method="POST" action="/create-invoice">
        <!-- Invoice Header Section -->
        <div class="form-group">
            <input type="text" id="invoiceNumber" name="invoiceNumber" placeholder=" " required>
            <label for="invoiceNumber">Invoice Number</label>
        </div>
        <div class="form-group">
            <input type="date" id="invoiceDate" name="invoiceDate" placeholder=" " required>
            <label for="invoiceDate">Invoice Date</label>
        </div>

        <!-- New Due Date Field -->
        <div class="form-group">
            <input type="date" id="dueDate" name="dueDate" placeholder=" " required>
            <label for="dueDate">Due Date</label>
        </div>

        <!-- Supplier Information -->
        <h2>Supplier Information</h2>
        <div class="form-group">
            <input type="text" id="businessName" name="businessName" placeholder=" " required>
            <label for="businessName">Business Name</label>
        </div>
        <div class="form-group">
            <input type="text" id="ssmNumber" name="ssmNumber" placeholder=" " required>
            <label for="ssmNumber">SSM Number</label>
        </div>
        <div class="form-group">
            <input type="text" id="taxNumber" name="taxNumber" placeholder=" " required>
            <label for="taxNumber">Tax Number</label>
        </div>
        <div class="form-group">
            <textarea id="address" name="address" placeholder=" " required></textarea>
            <label for="address">Address</label>
        </div>

        <!-- Buyer Information -->
        <h2>Buyer Information</h2>
        <div class="form-group">
            <input type="text" id="buyerName" name="buyerName" placeholder=" " required>
            <label for="buyerName">Buyer Name</label>
        </div>
        <div class="form-group">
            <textarea id="buyerAddress" name="buyerAddress" placeholder=" " required></textarea>
            <label for="buyerAddress">Buyer Address</label>
        </div>

        <!-- Items Section -->
        <h2>Items</h2>
        <div id="items">
            <!-- First static item example -->
            <div class="item">
                <div class="item-fields">
                    <input type="text" name="items[0][itemCode]" placeholder="Item Code" required>
                    <input type="text" name="items[0][description]" placeholder="Description" required> <!-- Changed to description -->
                    <input type="number" name="items[0][quantity]" placeholder="Quantity" required>
                    <input type="number" name="items[0][price]" placeholder="Unit Price" required>
                    <input type="number" name="items[0][tax]" placeholder="Tax (%)" required>
                    <input type="text" name="items[0][total]" placeholder="Total" readonly>
                </div>
                <div class="item-buttons">
                    <button type="button" class="edit-btn" data-action="save"><i class="fas fa-save"></i></button>
                    <button type="button" class="delete-btn"><i class="fas fa-trash"></i></button>
                </div>
            </div>
        </div>

        <!-- Add Item Button on a separate line -->
        <div class="button-container">
            <button type="button" id="addItem">
                <i class="fas fa-plus"></i> Add Item
            </button>
        </div>

        <!-- Create Invoice Button on a separate line -->
        <div class="button-container">
            <button type="submit">
                <i class="fas fa-file-invoice"></i> Create Invoice
            </button>
        </div>
    </form>

    <!-- Total Amount Section -->
    <div class="total-amount-section">
        <h3>Total Amount: <span id="totalAmount">0</span> MYR</h3>
        <p>Payment Terms: Please pay within 30 days.</p>
    </div>

    <!-- JavaScript File for Invoice Logic -->
    <script src="/js/invoice.js"></script>

</body>

</html>
